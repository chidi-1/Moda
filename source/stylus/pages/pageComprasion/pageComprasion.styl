.page-comprasion
  padding 0 20px

  .tabs
    padding-bottom 30px

  .comprasion-empty
    p
      font-size 18px

  .tabs__caption
    margin-top -50px
    text-align right
    margin-right -14px
    margin-bottom 25px

    li
      display inline-block
      vertical-align top
      width 27px
      height 27px
      padding 5px
      border 1px solid transparent
      cursor pointer
      margin-left 13px

      i
        display block
        width 27px
        height 27px
        background url("../img/spite--comp.png") no-repeat 0 0
        
    li.comprasion--icon-title
      i
        background-position  0 0
    li.comprasion--icon-list
      i
        background-position -27px 0
      
    li.active
      border 1px solid #b6e6a3
      cursor default

    li.comprasion--icon-title.active
      i
        background-position  0 -27px
    li.comprasion--icon-list.active
      i
        background-position -27px -27px

  .tab-list
    .comparison-list
      display block
      margin-left -34px
      width 1085px

      &__el
        margin-left 32px
        margin-bottom 18px
        display inline-block
        vertical-align top
        width 482px
        padding 12px
        padding-bottom 7px
        border 1px solid #cccccc
        position relative
        background #fff

        a.remove-comparison
          position absolute
          width 32px
          height 32px
          background url("../img/icon--remove.png") no-repeat 0 0
          top -16px
          right -16px
          z-index 10
          opacity 0

        a.dragg-comparison
          position absolute
          width 32px
          height 32px
          background url("../img/icon--resize.png") no-repeat 0 0
          top -21px
          left -21px
          z-index 10
          opacity 0

        &-img
          display inline-block
          vertical-align top
          width 66px
          height 61px
          overflow hidden
          margin-right 10px

          img
            min-width 100%
            min-height 100%

        &__info
          display inline-block
          vertical-align top
          width 225px

          a
            display block
            margin-top -3px
            color $cGreen
            text-decoration underline
            font-size 18px
            margin-bottom 5px

          a:hover
            text-decoration none

          &-art
            display block
            font-size 12px
            font-weight 300
            color $cBlack
            margin-bottom 5px

          &-price
            display inline-block
            vertical-align top
            color #b74638
            font-size 18px
            margin-right 3px

            i
              font-family 'als_rublregular'
              font-size 18px
              font-style normal

          &-measure
            display inline-block
            vertical-align top
            color #999
            font-size 18px

            i
              font-style normal
              font-size 10px
              line-height 13px
              vertical-align top

        &--form
          position relative
          display inline-block
          vertical-align top
          width 170px
          padding-top 15px

          .counter
            display inline-block
            vertical-align top
            width 51px
            margin-right 8px
            margin-left 0

            a
              zoom 0.8
              right 4px

          .counter-add
            top 0

          .counter-remove
            bottom 0

          .inp
            display block
            height 31px
            line-height 29px
            border 1px solid #cccccc
            width 51px
            text-align left
            padding-left 10px
            border-radius 9px

          a.btn-green
            border-radius 10px
            display inline-block
            vertical-align top
            height 31px
            width 111px
            text-decoration none
            line-height 33px
            color #fff
            margin-top 0
            padding-left 27px
            font-size 13px
            position relative

          a.btn-green:before
            position absolute
            content ''
            width 14px
            height 14px
            background url("../img/icon--basket.png") no-repeat 0 0
            top 9px
            left 9px
            background-size  100% 100%

          .popup
            display none
            position absolute
            background #fff
            border 1px solid #ccc
            border-radius 10px
            padding 9px 10px
            right -237px
            bottom -1px

            span
              padding-right 5px

            a
              text-decoration underline
              color $cGreen

      &__el:hover
        a.dragg-comparison,
        a.remove-comparison
          opacity 1


  .tab-title
    .comparison-list
      display block
      margin-left 0
      width 1070px

      &__el
        margin-left 0
        margin-bottom 0
        display inline-block
        vertical-align top
        width 260px
        height 260px
        padding 0
        position relative
        background #fff

        .comparison-list__el-img
          width 260px
          height 260px
          z-index 5

        .hidden-wrap
          position absolute
          width 0
          height 0
          padding 10px
          top -30px
          left -30px
          z-index 5
          overflow hidden
          opacity 0
          transition opacity 0.3s
          -webkit-transition opacity 0.3s

          .hidden
            border-radius 5px
            position relative
            box-shadow  0 0 10px rgba(0,0,0,0.4)
            background-size cover !important
            border 10px solid #fff
            width 260px
            height 260px
            display none

            a.dragg-comparison
              position absolute
              width 32px
              height 32px
              background url("../img/icon--resize.png") no-repeat 0 0
              top -21px
              left -21px
              z-index 10

            a.remove-comparison
              position absolute
              width 32px
              height 32px
              background url("../img/icon--remove.png") no-repeat 0 100%
              top -21px
              right -21px
              z-index 10

            .comparison-list__el-content
              display block
              position absolute
              z-index 10px
              left 0
              right 0
              bottom 0
              background rgba(255,255,255,0.7)
              padding 10px

              a.comparison-list__el__info-name
                display block
                color #333333
                text-decoration underline
                font-size 18px
                margin-bottom 5px

              .comparison-list__el__info-price
                display inline-block
                vertical-align top
                color #b74638
                font-size 18px
                margin-right 3px

                i
                  font-family 'als_rublregular'
                  font-size 18px
                  font-style normal

              .comparison-list__el__info-measure
                display inline-block
                vertical-align top
                color #999
                font-size 18px

                i
                  font-style normal
                  font-size 10px
                  line-height 13px
                  vertical-align top

            .comparison-list__el--form
              position relative
              display inline-block
              vertical-align top
              padding-top 10px

              .counter
                display inline-block
                vertical-align top
                width 51px
                margin-right 5px
                margin-left 0

                a
                  right -2px

                .counter-add
                  top 1px

                .counter-remove
                  bottom 1px

                .inp
                  display block
                  height 41px
                  line-height 40px
                  border 1px solid #cccccc
                  width 55px
                  text-align left
                  padding-left 10px
                  font-size 18px

              a.btn-green
                display inline-block
                vertical-align top
                height 38px
                width 165px
                text-decoration none
                line-height 42px
                color #fff
                margin-top 0
                padding-left 27px
                font-size 17px
                position relative
                margin-left 15px

              a.btn-green:before
                position absolute
                content ''
                width 14px
                height 14px
                background url("../img/icon--basket.png") no-repeat 0 0
                top 14px
                left 18px
                background-size  100% 100%

              .popup
                display none
                position absolute
                padding 10px
                border-radius 10px
                right -116px
                bottom 2px

                span
                  padding-right 5px

                a
                  text-decoration underline
                  color $cGreen

    .comparison-list__el:hover
      .hidden-wrap
        opacity 1
        width auto
        height auto
        padding 20px
        z-index 10

        .hidden
          display block

