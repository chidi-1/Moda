.page-career
  padding 0 20px

  h1
    margin-bottom 17px

  .career--text
    margin-top 5px
    padding-bottom 80px

    p
      color $cBlack
      font-size 14px

  .vacancy
    display block

    &__el
      display inline-block
      vertical-align top
      width 450px
      margin-right 30px
      padding-bottom 55px

      &--title
        display block
        color $cPink
        line-height 24px
        text-transform uppercase
        padding-bottom 30px
        font-size 14px

        i
          width 24px
          height 24px
          border-radius 24px
          background $cPink
          text-align center
          line-height 24px
          color #fff
          margin-right 10px
          display inline-block
          vertical-align middle

      &--about
        display block
        padding-bottom 16px

        span
          display block
          padding-bottom 16px
          font-size 14px

      &--requirements
        display block
        font-weight 500
        font-size 14px

      ul
        li
          display block
          padding-left 8px
          position relative
          line-height 17px
          font-size 14px

        li:before
          content '-'
          position absolute
          left 0



