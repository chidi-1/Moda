.page-search-result
  padding 0 20px

  h1
    margin-bottom 17px

  .search-form
    display block

    .inp
      width 515px
      border-radius 6px 0 0 6px
      border 1px solid $cGray-l
      font-size 18px
      color #000000
      height 40px
      display inline-block
      vertical-align top

    label
      border-radius 0 6px 6px 0
      border 1px solid $cGray-l
      margin-left -1px
      height 38px
      display inline-block
      vertical-align top
      width 42px
      cursor pointer

      input
        background none
        border none
        outline none
        box-shadow none

    label:after
      content "\f002"
      font-family 'FontAwesome', cursive
      font-style normal
      color #a1bc9b
      font-size 20px
      line-height 39px

.result--list
  margin-bottom 50px

  &__el
    display block
    padding 30px 0
    border-bottom  1px solid #ededed
    white-space nowrap

    div
      white-space normal

    &--img
      display inline-block
      vertical-align top
      width 120px
      position relative

      .visible
        width 100px
        height 100px
        overflow hidden

        img
          min-width 100%
          min-height 100%

      .hidden
        display block
        opacity 0
        position absolute
        width 0
        height 0
        border-radius 10px
        border 3px solid #ffffff
        box-shadow 0 0 10px rgba(0,0,0,0.3)
        left -117px
        top - 365px
        overflow hidden
        z-index 25
        transition opacity 0.3s
        -webkit-transition opacity 0.3s

        img
          min-width 100%
          min-height  100%

    &--img:hover
      .hidden
        width 335px
        height 335px
        opacity 1

    &__content
      width 700px
      display inline-block
      vertical-align top

      &--title
        display block
        margin-bottom 17px
        margin-top -5px

        a
          display inline-block
          vertical-align top
          color $cGreen
          font-size 21px
          text-decoration underline

      .breadcrumbs
        margin-bottom 14px

        li:after
          top 4px

    &__info
      display inline-block
      vertical-align bottom
      text-align right
      width 215px

      &-price
        display inline-block
        vertical-align top
        font-size 38px
        color #ae4335
        margin-right 10px

        i
          font-family 'als_rublregular'

      &-measure
        display inline-block
        vertical-align top
        color #999
        font-size 38px

        i
          font-style normal
          font-size 16px
          line-height 24px
          vertical-align top