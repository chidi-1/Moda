      content "\f177"
      font-family $fIcons
      color $cGreen
      font-size 16px
      top 1px
      left -21px
      font-weight lighter
      text-shadow none

    a.basket-pagination__next:after
      content "\f178"
      left auto
      right -20px

    .btn-green
      width 232px
      height 41px
      position relative

    .btn-green.basket-pagination__oform
      font-size 18px
      width 255px
      height 50px
      line-height 52px

    a.btn-green.basket-pagination__next:after
      right 30px
      top -1px
      color #ffffff

