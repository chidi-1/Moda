  .basket-pagination
    display block
    text-align center
    padding-bottom 50px

    a
      display inline-block
      vertical-align middle
      margin 0 28px
      font-size 14px

    a.basket-pagination__prev
      color $cGreen
      border-bottom 1px dashed $cGreen
      position relative

    a.basket-pagination__prev:hover
      border-bottom 1px dashed transparent

    a.basket-pagination__next:after,
    a.basket-pagination__prev:before
