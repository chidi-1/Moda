.page-basket
  padding 0 20px

  .basket-content
    padding-bottom 71px

  .basket-nav
    background #ffffff; /* Old browsers */
    background -moz-linear-gradient(top,  #ffffff 0%, #d1d1d1 50%, #dbdbdb 51%, #dcdcdc 100%)
    background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(50%,#d1d1d1), color-stop(51%,#dbdbdb), color-stop(100%,#dcdcdc))
    background -webkit-linear-gradient(top,  #ffffff 0%,#d1d1d1 50%,#dbdbdb 51%,#dcdcdc 100%)
    background -o-linear-gradient(top,  #ffffff 0%,#d1d1d1 50%,#dbdbdb 51%,#dcdcdc 100%)
    background -ms-linear-gradient(top,  #ffffff 0%,#d1d1d1 50%,#dbdbdb 51%,#dcdcdc 100%)
    background linear-gradient(to bottom,  #ffffff 0%,#d1d1d1 50%,#dbdbdb 51%,#dcdcdc 100%)
    height 49px
    margin-top 2px
    white-space nowrap
    margin-bottom 22px
    border-radius  10px 0 0 10px

    &__el
      display table-cell
      height 48px
      vertical-align middle
      border-left 1px solid #d8d8d8
      border-right 1px solid #ffffff
      border-top 1px solid #efefef
      white-space normal

      a, span
        display block
        color #b2b2b2
        font-size 15px
        text-align center
        font-weight 300
        text-transform uppercase

    &__el:nth-child(1)
      border-left none
      border-radius  10px 0 0 10px
      width 155px

    &__el:nth-child(2)
      width 278px

    &__el:nth-child(3)
      width 249px

    &__el:nth-child(4)
      width 197px

    &__el:nth-child(5)
      border-right none
      border-radius  0
      width 150px

    &__el.active
      position relative
      border-top 1px solid #c7e2c2
      background #c7e2c2
      background -moz-linear-gradient(top,  #c7e2c2 0%, #a2cea9 20%, #99c2a0 100%)
      background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#c7e2c2), color-stop(20%,#a2cea9), color-stop(100%,#99c2a0))
      background -webkit-linear-gradient(top,  #c7e2c2 0%,#a2cea9 20%,#99c2a0 100%)
      background -o-linear-gradient(top,  #c7e2c2 0%,#a2cea9 20%,#99c2a0 100%)
      background -ms-linear-gradient(top,  #c7e2c2 0%,#a2cea9 20%,#99c2a0 100%)
      background linear-gradient(to bottom,  #c7e2c2 0%,#a2cea9 20%,#99c2a0 100%)

      a, span
        color #fff

    &__el.active:after
      position absolute
      content ''
      top -1px
      right -7px
      bottom 0
      width 7px
      height 49px
      background url("../img/decor--steps.png") no-repeat 0 0

    &__el:last-child.active
      background #eab1a7
      border-top 1px solid #f5b6ae
      background -moz-linear-gradient(top,  #f5b6ae 0%, #f4978b 20%, #e58e83 100%)
      background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f5b6ae), color-stop(20%,#f4978b), color-stop(100%,#e58e83))
      background -webkit-linear-gradient(top,  #f5b6ae 0%,#f4978b 20%,#e58e83 100%)
      background -o-linear-gradient(top,  #f5b6ae 0%,#f4978b 20%,#e58e83 100%)
      background -ms-linear-gradient(top,  #f5b6ae 0%,#f4978b 20%,#e58e83 100%)
      background linear-gradient(to bottom,  #f5b6ae 0%,#f4978b 20%,#e58e83 100%)

    &__el:last-child.active:after
      display none


  .basket-notification
    display block
    font-size 18px
    color $cBlack
    font-weight 300
    padding-top 11px
    padding-bottom 22px

  .basket-list--wrap
    border 1px dashed #d7d7d7
    border-radius  10px
    padding 20px 18px 18px

    .basket-list
      display block
      margin-top -30px

      &__el
        border-bottom 1px solid #d7d7d7
        display block
        padding-top 30px
        padding-bottom 19px
        white-space nowrap

        .basket-list__el-delete
          display inline-block
          vertical-align top
          white-space normal
          width 32px
          height 32px
          margin-top 28px
          margin-right 14px
          background url("../img/icon--remove.png") no-repeat 0 0

        .basket-list__el--img
          display inline-block
          vertical-align top
          white-space normal
          width 100px
          margin-right 18px
          position relative

          .visible
            display block
            height 100px
            overflow hidden

            img
              min-width 100%
              min-height 100%

          .hidden
            width 0
            height 0
            opacity 0
            position absolute
            background #ffffff
            border-radius 10px
            box-shadow 0 0 5px rgba(0,0,0,0.3)
            top -360px
            left -125px
            transition opacity 0.2s
            -webkit-transition opacity 0.2s
            z-index 20
            overflow hidden
            padding 5px

            img
              width 335px
              height 335px
              display block
              border-radius 10px

          .visible:hover + .hidden
            opacity 1
            width 335px
            height 335px

        .basket-list__el--info
          display inline-block
          vertical-align top
          white-space normal
          width 585px

          a
            display inline-block
            vertical-align top
            color $cGreen
            border-bottom  1px solid $cGreen
            font-size 21px
            padding-top 17px
            line-height 21px
            margin-bottom 11px

          a:hover
            border-bottom  1px solid transparent

          span
            display block
            font-size 14px
            color $cGray

        .basket-list__el--params
          display inline-block
          vertical-align top
          white-space normal
          width 215px
          padding-top 25px

          .counter
            margin-left 0
            margin-right 10px

          .inp
            width 66px
            height 41px
            font-size 18px
            line-height 40px
            border 1px solid #cccccc

          &--measure
            display inline-block
            vertical-align middle
            width 50px
            color $cGray-l
            font-size 28px

            i
              font-style normal
              font-size 15px
              line-height 26px
              vertical-align top

          &--price
            display inline-block
            vertical-align middle
            font-size 28px
            color $cRed

            i
              font-family $fRublre
              font-size 28px
              color $cRed

    .basket--total
      display block
      text-align right
      padding-top 20px
      padding-right 21px

      span
        font-size 28px
        color $cGray-l
        display inline-block
        vertical-align top
        text-transform uppercase
        font-weight 500

      .basket-total-value
