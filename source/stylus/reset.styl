// Variables

$cGreen = #61ba67
$cGreen-l = #a2cea9
$cGreen-d = #59995a
$cBlack = #333333
$cGray = #666666
$cGray-l = #999999
$cRed = #b61914
$cPink = #f4978b
$cOrange = #f07d26

html *
    max-height 999999px //android font-size fix
    -webkit-font-smoothing: antialiased;

html
body
    margin 0
    padding 0
    width 100%
    height 100%
    min-width 1146px

body
    font 14px 'Roboto', sans-serif;
    color $cBlack
    min-height 100%
    position relative
    -webkit-text-size-adjust 100% // ios font-size fix
    background url("../img/bg__main.jpg") repeat 0 0

.hidden-block
  display none !important

form,
p,
ul, ol,
dl, dt, dd,
h1, h2, h3, h4, h5, h6{
    margin: 0;
    padding: 0;
    font-weight: normal;
    list-style: none;
}

/***** ie fix ****/
a img
    border none

.wrapper
    overflow hidden

.clear
    clear both
    font-size 0
    line-height 0
    height 0

.clearfix:after
.section:after
    content: "";
    display: table;
    clear: both;

// .section

.pull-right
    float right

.pull-left
    float left

.text-center
    text-align center

.text-right
    text-align right
   
.section
    position relative
    padding 0 40px

.valign
    height 100%   
    
    &:before
        content ''
        height 100%
        display inline-block     
        vertical-align middle
        margin-right -0.25em 

.justifyed{
    text-align: justify;
    margin-bottom -1em 

    &:after{
        display: inline-block;
        content: '';
        width: 100%;
    }
}

// отступы между горизонтальными li
ol, ul, .grid{
    list-style: none;
    font-size:0;
    line-height:0;
    letter-spacing:-1px;
}

li, .grid-item{
    line-height:normal;
    letter-spacing:normal;
    display:inline-block;
    vertical-align: top;
    zoom:1;
}

